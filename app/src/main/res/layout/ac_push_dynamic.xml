<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

    <!--title-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/color_white">

        <FrameLayout
                android:id="@+id/fl_title_back"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

            <ImageView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ico_nav_back"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription"/>
        </FrameLayout>

        <TextView
                android:id="@+id/title_center_push_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="添加演艺动态"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:textColor="@color/color_222"
                android:layout_centerInParent="true"/>

        <TextView
                android:id="@+id/title_right_push_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="发布"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentEnd="true"
                android:textColor="@color/color_222"
                android:layout_centerInParent="true"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_fff3f3f3"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!--发布的内容-->
            <EditText
                    android:id="@+id/content_push_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:maxLength="140"
                    android:background="@color/color_white"
                    android:gravity="start"
                    android:minHeight="120dp"
                    android:textColor="@color/color_222"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/sp_16"
                    android:hint="优质内容有机会获得编辑推荐,被更多人看"
                    tools:ignore="TextFields"/>

            <TextView
                    android:id="@+id/count_push_dynamic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/140"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/dp_20"
            />


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_selected_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingEnd="@dimen/dp_15"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    android:layout_marginTop="@dimen/dp_10"/>
            <LinearLayout
                    android:id="@+id/layout_associated_skill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_acting_push"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        tools:ignore="ContentDescription"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="演艺技能"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/color_222"
                        tools:ignore="RtlHardcoded"/>
                <TextView
                        android:id="@+id/content_skill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="立即关联,被检索率提高90%"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_222"
                        android:textColorHint="@color/color_999"
                        tools:ignore="RtlHardcoded"/>

                <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_login_forward"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:scaleType="centerInside"
                />
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/color_f3f3f3"
                    android:layout_height="@dimen/px_1"/>

            <LinearLayout
                    android:id="@+id/layout_associated_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_style_push"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        tools:ignore="ContentDescription"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="形象风格"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/color_222"
                        tools:ignore="RtlHardcoded"/>
                <TextView
                        android:id="@+id/content_style"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="选择"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/color_222"
                        android:textColorHint="@color/color_999"
                        tools:ignore="RtlHardcoded"/>

                <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_login_forward"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:scaleType="centerInside"
                        tools:ignore="ContentDescription"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/color_f3f3f3"
                    android:layout_height="@dimen/px_1"/>

            <LinearLayout
                    android:id="@+id/layout_associated_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_54"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingEnd="@dimen/dp_20"
                    android:visibility="gone"
                    android:orientation="horizontal">

                <ImageView
                        android:layout_width="@dimen/dp_16"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_location"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerInside"
                        tools:ignore="ContentDescription"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="所在位置"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/color_222"
                        tools:ignore="RtlHardcoded"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="选择"
                        android:gravity="center_vertical|right"
                        android:textSize="@dimen/sp_13"
                        android:textColorHint="@color/color_999"
                        tools:ignore="RtlHardcoded"/>

                <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_login_forward"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_15"
                        android:scaleType="centerInside"
                        tools:ignore="ContentDescription"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/color_f3f3f3"
                    android:layout_height="@dimen/px_1"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>