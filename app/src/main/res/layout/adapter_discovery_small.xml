<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:orientation="vertical"
>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/title_discovery_small"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_222"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights"/>

            <TextView
                    android:id="@+id/createDate_discovery_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_999"
                    android:layout_marginTop="@dimen/dp_28"
            />
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/draweeView_discovery_small"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_90"
                app:placeholderImage="@mipmap/ico_empty_holder"
                app:roundedCornerRadius="@dimen/dp_4"
                app:viewAspectRatio="1.5"
        />
    </LinearLayout>


    <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/color_f3f3f3"
            android:layout_marginTop="@dimen/dp_15"

    />
</LinearLayout>

