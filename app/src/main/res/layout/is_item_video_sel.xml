<?xml version="1.0" encoding="utf-8"?>
<com.suncity.dailynotices.islib.widget.SquareRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dp_109"
        android:layout_height="@dimen/dp_109">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivVideoImage"
            android:layout_width="@dimen/dp_109"
            android:layout_height="@dimen/dp_109"
            android:layout_centerInParent="true"
            app:viewAspectRatio="1.0"/>

    <FrameLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#B3000000">

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/ic_video_mark"/>
    </FrameLayout>


</com.suncity.dailynotices.islib.widget.SquareRelativeLayout>