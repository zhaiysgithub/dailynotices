<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_1"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_red"
            android:layout_width="@dimen/dp_166"
            android:layout_height="@dimen/dp_166"
            app:placeholderImage="@mipmap/ico_home_img_holder"
            app:failureImage="@mipmap/ico_home_img_holder"
            app:placeholderImageScaleType="centerCrop"
            app:roundedCornerRadius="@dimen/dp_4"
    />

    <ImageView
            android:id="@+id/iv_reds_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_reds_drop_recommend"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_white"
            android:layout_toEndOf="@id/iv_reds_drop"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginStart="@dimen/dp_3"
    />
    <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_222"
            android:textStyle="bold"
            android:layout_below="@id/iv_red"
            android:layout_marginTop="@dimen/dp_15"
    />
</RelativeLayout>