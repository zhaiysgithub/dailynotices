<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
            layout="@layout/view_title"/>


    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_80"
            android:fillViewport="true"
            android:layout_below="@id/layout_title">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="UselessParent">

            <TextView
                    android:id="@+id/title_notice_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/color_222"
                    android:textStyle="bold"
                    android:text="千与千寻上映观影"
                    android:textSize="@dimen/sp_16"/>

            <TextView
                    android:id="@+id/date_notice_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019-06-21发布 | 2019-07-30截止"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/color_999"
                    android:textSize="@dimen/sp_13"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
            >
                <TextView
                        android:id="@+id/sales_notice_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:text="0元/人"
                        android:textColor="@color/color_ff5e42"/>

                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/worktime_notice_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_13"
                        android:text="工作时间 2019-07-10"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:textColor="@color/color_999"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_f3f3f3"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:text="工作地点"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_222"/>

            <TextView
                    android:id="@+id/workaddress_notice_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:text="万达影城"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/color_999"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_f3f3f3"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:text="通告详情"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/color_222"/>

            <TextView
                    android:id="@+id/tv_notice_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:textColor="@color/color_999"/>

            <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/draweeView_discovery_big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    app:viewAspectRatio="1.675"
                    app:placeholderImage="@mipmap/ico_empty_holder"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_15"
            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_f3f3f3"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
            />

            <RelativeLayout
                    android:id="@+id/layout_user_notice_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
            >

                <!--用户登录之后的头像-->
                <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/draweeView_notice_detail"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        app:placeholderImage="@drawable/shape_login_avatar_default"
                        app:failureImage="@drawable/shape_login_avatar_default"
                        app:roundAsCircle="true"
                        android:layout_centerVertical="true"
                        app:roundingBorderWidth="@dimen/dp_3"
                        app:roundingBorderColor="@color/color_white"
                        tools:ignore="ContentDescription"/>

                <TextView
                        android:id="@+id/username_notice_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:textSize="@dimen/sp_15"
                        android:text="mingcehng"
                        android:layout_toRightOf="@id/draweeView_notice_detail"
                        android:textColor="@color/color_222"/>

                <TextView
                        android:id="@+id/userdate_notice_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:textSize="@dimen/sp_13"
                        android:text="07-11"
                        android:layout_below="@id/username_notice_detail"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_toEndOf="@id/draweeView_notice_detail"
                        android:textColor="@color/color_222"/>

                <ImageView
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_16"
                        android:src="@mipmap/ico_login_forward"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription"/>
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_f3f3f3"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
            />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <TextView
            android:id="@+id/commun_notice_detail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="@string/str_communication_immediately"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_222"
            android:background="@drawable/shape_submit_checked_bg"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
    />
</RelativeLayout>
