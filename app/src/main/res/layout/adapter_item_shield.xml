<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_shield_avatar"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:roundAsCircle="true"
            android:layout_centerVertical="true"
    />

    <TextView
            android:id="@+id/tv_shield_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_222"
            android:layout_toEndOf="@id/iv_shield_avatar"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_14"
    />
    <TextView
            android:id="@+id/tv_shield_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shield_username"
            android:layout_toEndOf="@id/iv_shield_avatar"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_7"
    />
    
    <ImageView
            android:id="@+id/iv_shield_mark_auth"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            tools:ignore="ContentDescription"
            android:src="@mipmap/ico_certification"
            android:layout_alignTop="@id/tv_shield_username"
            android:layout_toEndOf="@id/tv_shield_username"
            android:layout_marginStart="@dimen/dp_5"
            android:visibility="gone"
        />

    <TextView
            android:id="@+id/tv_shield_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_shield_remove"
            android:text="@string/str_remove"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_21"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_222"
            tools:ignore="RelativeOverlap"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f3f3f3"
            android:layout_alignParentBottom="true"
            tools:ignore="ContentDescription"/>
</RelativeLayout>